<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AmelyCordova_ExamenRecuperacion.MainPage">

    <ScrollView>
        <StackLayout>
            <Label Text="Listado de fotografías Pomerian - Amely Córdova" FontSize="Title" Padding="30,10,30,10"/>

            <Button Text="AC_Llamar API" Clicked="Button_Clicked"/>

            <ListView x:Name="ListaDog">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <CollectionView VerticalOptions="Start" ItemsSource="{Binding Images}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>

</ContentPage>
